{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "dialog:allow-open",
    "dialog:default",
    "store:default"
  ]
}
