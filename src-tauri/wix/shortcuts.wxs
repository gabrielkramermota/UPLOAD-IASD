<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!-- Atalho no Menu Iniciar -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="StartMenuShortcut" Guid="*">
        <Shortcut
          Id="ApplicationStartMenuShortcut"
          Name="Upload IASD Desktop"
          Description="Upload IASD Desktop - Sistema de Upload e Download"
          Target="[INSTALLFOLDER]uploadiasddesktop.exe"
          WorkingDirectory="INSTALLFOLDER"/>
        <RemoveFolder Id="CleanStartMenuShortcut" On="uninstall"/>
        <RegistryValue
          Root="HKCU"
          Key="Software\UploadIASDDesktop"
          Name="installed"
          Type="integer"
          Value="1"
          KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Atalho na Ãrea de Trabalho -->
    <DirectoryRef Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="*">
        <Shortcut
          Id="DesktopShortcut"
          Name="Upload IASD Desktop"
          Description="Upload IASD Desktop - Sistema de Upload e Download"
          Target="[INSTALLFOLDER]uploadiasddesktop.exe"
          WorkingDirectory="INSTALLFOLDER"/>
        <RegistryValue
          Root="HKCU"
          Key="Software\UploadIASDDesktop"
          Name="desktopShortcut"
          Type="integer"
          Value="1"
          KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
